{% extends "TopItems::PageDesign" %}

{% block PageBody %}
    <h1 style="text-align: center">{{ resultCount }} top items found!</h1>
    <div class="col-xs-12 card-deck-wrapper" style="overflow: auto">
    <ul class="list-unstyled card-deck" style="height: 380px">
        {% if currentItems is not null %}
            {% for item in currentItems %}
                <li class="card" style="width: 380px">
                    <div class="card-block">
                        <h4 class="card-title">Id name1:{{ item.itemDescription.name1 }}</h4>
                        <h8 class="card-subtitle">ID: {{ item.variationBase.id }}</h8>
                        <h8 class="card-subtitle">itemId: {{ item.variationBase.itemId }}</h8>
                        <p class="card-subtitle">variationName: {{ item.variationBase.variationName }}</p>
                    </div>
                    {% set image = item.variationImageList | first %}
                    <img class="col-lg-12" src="{{ image.path }}" alt="{{ image.cleanImageName }}">
                    <div class="card-block">
                        <p class="card-text">itemDescription: {{ item.itemDescription.description }}</p>
                    </div>
                    <div class="card-footer bg-primary">
                        <p style="text-align: center">Price: {{ item.variationRetailPrice.price }} €</p>
                        <p style="text-align: center">Currency: {{ item.variationRetailPrice.currency }} </p>
                        <p style="text-align: center">Price-ID: {{ item.variationRetailPrice.priceId }} </p>
                    </div>
                </li>
            {% endfor %}

            {% else %}
                <li>No items found!</li>
        {% endif %}
    </ul>
    </div>
{% endblock %}
